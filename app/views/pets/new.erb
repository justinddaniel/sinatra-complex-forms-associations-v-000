<h1>Create a new Pet</h1>

<form action="/pets" method="POST">
  <label>Name:</label>

  <br></br>

  <input type="text" name="pet[name]">

  <br></br>

  <label>Choose an existing owner:</label>

  <br></br>

  <%@pets.each do |pet|%>
    <input type="checkbox" name="owner[pet_ids][]" value="<%=pet.id%>" id="<%=pet.id%>"><%=pet.name%></input>
    <%end%>

    <br></br>

  <label>or, create a new owner:</label>

  <br></br>

  <label>name:</label>

    <input  type="text" name="owner[name]"></input>

  <br></br>

  <input type="submit" value="Create Pet">
</form>


